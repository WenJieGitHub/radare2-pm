R2PM_BEGIN

R2PM_TGZ "https://ftp.gnu.org/gnu/poke/poke-3.0.tar.gz"
R2PM_DIR poke-3.0
R2PM_DESC "[syspkg] GNU/Poke tool and library needed for r2poke"


R2PM_INSTALL() {
	echo "Ubuntu: Requires libgc-dev and libreadline-dev"
	export CFLAGS=-fPIC
	export LDFLAGS=-fPIC
	./configure --prefix="${R2PM_PREFIX}"
	${MAKE} -j4
	${MAKE} install
}

R2PM_UNINSTALL() {
	${MAKE} uninstall
}

R2PM_END
