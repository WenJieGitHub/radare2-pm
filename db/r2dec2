R2PM_BEGIN

R2PM_GIT "https://github.com/wargio/r2dec-js"
R2PM_DESC "Even more experimental r2dec plugin using core2"
BINDIR="${R2PM_BINDIR}"

R2PM_INSTALL() {
	cd ..
	[ ! -d r2dec2 ] && \
		git clone --branch core2 https://github.com/wargio/r2dec-js r2dec2
	cd r2dec2 || exit 1
	git pull
	${MAKE} clean
	${MAKE} || exit 1
	${MAKE} user-install || exit 1
}

R2PM_UNINSTALL() {
	${MAKE} -C ../r2dec2 user-uninstall || exit 1
}

R2PM_END
